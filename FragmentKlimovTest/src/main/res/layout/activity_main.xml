<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:padding="16dp"
    app:elevation="16dp"
    app:elevationOverlayColor="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_01"
        style="@style/btStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/kote_name_ryzik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_02"
        style="@style/btStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/kote_name_barsik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_01"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_03"
        style="@style/btStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        android:stateListAnimator="@null"
        android:text="@string/kote_name_murzik"
        android:translationZ="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_02"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_04"
        style="@style/btStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/kote_name_tolik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_03"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_top"
        android:text="@string/about"
        android:textSize="@dimen/bt_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_04"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>