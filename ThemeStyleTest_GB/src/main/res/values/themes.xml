<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeStyleTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myStyleNoAcionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">@dimen/text_size_enter_data</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="myStyleLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">@dimen/text_size_enter_data</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="backgroundColor">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="myStyleNight" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textSize">@dimen/text_size_enter_data</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/colorOnBackground</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>

    </style>


</resources>